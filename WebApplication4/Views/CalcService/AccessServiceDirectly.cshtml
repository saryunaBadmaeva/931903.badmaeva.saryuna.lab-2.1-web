@using WebApplication4.Services
@inject IServiceActions service
@{ ViewData["Title"] = "AccessServiceDirectly"; }
<h1>@ViewData["Title"]</h1>

<b>Rand Value First : </b> @service.val1<br />
<b>Rand Value Second : </b> @service.val2<br />

<b>Add: </b><br />
@service.val1 +  @service.val2 = @service.add()
<br />

<b>Sub : </b><br />
@service.val1 -  @service.val2 =  @service.sub()
<br />

<b>Mult : </b><br />
@service.val1 *  @service.val2 =  @service.mult()
<br />

<b>Div :</b><br />
@service.val1 /  @service.val2 =  @if (service.div() != -1)
{@service.div()}
else
{<span> Exception: Division by zero</span>}
<br />

